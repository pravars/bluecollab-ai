# Dwello Platform Environment Configuration

# =============================================
# DATABASE CONFIGURATION
# =============================================

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=dwello

# MongoDB Replica Set (Production)
# MONGODB_URI=mongodb://mongodb-primary:27017,mongodb-secondary-1:27017,mongodb-secondary-2:27017/dwello?replicaSet=dwello-rs

# MongoDB Atlas (Cloud)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/dwello?retryWrites=true&w=majority

# =============================================
# APPLICATION CONFIGURATION
# =============================================

# Application
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Security
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# CORS
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# =============================================
# EXTERNAL SERVICES
# =============================================

# Email Service (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@dwello.com

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Payment Processing (Stripe)
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# File Storage (AWS S3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=dwello-uploads

# CDN (CloudFront)
CLOUDFRONT_DOMAIN=d1234567890.cloudfront.net

# =============================================
# AI SERVICES
# =============================================

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key

# AI Bidding Configuration
AI_BIDDING_ENABLED=true
AI_BIDDING_CONFIDENCE_THRESHOLD=0.8
AI_BIDDING_MAX_BIDS_PER_DAY=10

# =============================================
# MONITORING & ANALYTICS
# =============================================

# Application Monitoring (Sentry)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Analytics (Google Analytics)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Performance Monitoring (New Relic)
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key

# =============================================
# CACHING
# =============================================

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Cache TTL (seconds)
CACHE_TTL_SHORT=300    # 5 minutes
CACHE_TTL_MEDIUM=3600  # 1 hour
CACHE_TTL_LONG=86400   # 24 hours

# =============================================
# RATE LIMITING
# =============================================

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# API Rate Limiting
API_RATE_LIMIT_WINDOW_MS=60000   # 1 minute
API_RATE_LIMIT_MAX_REQUESTS=60

# =============================================
# FEATURE FLAGS
# =============================================

# Feature Flags
FEATURE_AI_BIDDING=true
FEATURE_VIDEO_CALLS=false
FEATURE_ESCROW_PAYMENTS=true
FEATURE_MOBILE_APP=true
FEATURE_ADVANCED_ANALYTICS=true

# =============================================
# BUSINESS LOGIC
# =============================================

# Platform Settings
PLATFORM_FEE_PERCENTAGE=5.0
MIN_BID_AMOUNT=50.00
MAX_BID_RADIUS_MILES=50
JOB_EXPIRY_DAYS=30
BID_EXPIRY_DAYS=7

# Email Verification
EMAIL_VERIFICATION_REQUIRED=true
PHONE_VERIFICATION_REQUIRED=false

# =============================================
# LOGGING
# =============================================

# Logging Level
LOG_LEVEL=info

# Log Files
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# =============================================
# DEVELOPMENT
# =============================================

# Development Settings
DEBUG_MODE=true
MOCK_PAYMENTS=false
MOCK_EMAILS=true
MOCK_SMS=true

# Test Database
TEST_MONGODB_URI=mongodb://localhost:27017/dwello-test
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_51234567890abcdef
